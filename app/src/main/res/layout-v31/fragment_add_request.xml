<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.main.student.addRequest.AddRequest">


        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/black"
            android:minHeight="?attr/actionBarSize"
            android:theme="?attr/actionBarTheme"

            tools:layout_editor_absoluteX="0dp"
            tools:layout_editor_absoluteY="0dp" >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/request_bar"
                android:textSize="30dp">

            </TextView>


        </androidx.appcompat.widget.Toolbar>





    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="600dp"
        app:cardBackgroundColor="@android:color/system_accent1_0"
        app:cardCornerRadius="20dp"
        app:cardElevation="40dp"
        app:cardMaxElevation="12dp"
        app:cardPreventCornerOverlap="true"
        app:cardUseCompatPadding="true">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_weight="0.9">

        <TextView
            android:id="@+id/textViewNAME"
            android:layout_width="123dp"
            android:layout_height="wrap_content"
            android:textSize="30dp"
            android:text="@string/passenger_name"
           />

        <EditText
            android:id="@+id/editTextNAME"
            android:layout_width="290dp"
            android:layout_height="wrap_content"

            android:background="@drawable/styles"
            android:hint="@string/passenger_name">


        </EditText>
            <TextView
                android:id="@+id/textViewPickup"
                android:layout_width="123dp"
                android:layout_height="wrap_content"
                android:textSize="30dp"
                android:text="Pickup:"/>
            <EditText
                android:id="@+id/editViewPickup"
                android:layout_width="290dp"
                android:layout_height="wrap_content"
                android:background="@drawable/styles"
                android:hint="pickup location"/>

        <TextView
            android:id="@+id/textViewDestination"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:textSize="30dp"
            android:text="@string/destination">

        </TextView>
        <EditText
            android:id="@+id/editTextDestination"
            android:layout_width="300dp"
            android:layout_height="wrap_content"

            android:hint="@string/destination"

            android:background="@drawable/styles">

        </EditText>
        <TextView
            android:id="@+id/textViewDateTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/date_time"
            android:textSize="30dp"
           >

        </TextView>
        <EditText
            android:id="@+id/editViewDateTime"
            android:layout_width="300dp"
            android:layout_height="wrap_content"

            android:background="@drawable/styles"
            android:hint="@string/date_time"
            >

        </EditText>
        <TextView
            android:id="@+id/chooseType"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Choose type:"
            android:textSize="30dp"
            >

        </TextView>
        <RadioGroup


            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:id="@+id/radioGroup"
            >
            <RadioButton
                android:id="@+id/radiocar4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Car for 4"
                android:textSize="25dp"
                >

            </RadioButton>
            <RadioButton
                android:id="@+id/radiocar6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Car for 6"
                android:textSize="25dp"
               >

            </RadioButton>
            <RadioButton
                android:id="@+id/radioauto"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Auto"
                android:textSize="25dp"
                >

            </RadioButton>

        </RadioGroup>
        </LinearLayout>


    </androidx.cardview.widget.CardView>

    <Button
        android:id="@+id/buttonRequest"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="580dp"
        android:layout_gravity="center_horizontal"
        android:textColor="@color/white"
        android:backgroundTint="@color/ochre"
        android:text="Request" />

</FrameLayout>